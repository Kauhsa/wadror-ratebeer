<h1>Listing breweries</h1>

<% cache do %>

    <h3>Active:</h3>

    <p>Number of breweries: <%= @active_breweries.count %></p>
    <%= render 'list', :breweries => @active_breweries %>

    <h3>Retired:</h3>

    <p>Number of breweries: <%= @retired_breweries.count %></p>
    <%= render 'list', :breweries => @retired_breweries %>

<% end %>

<%= link_to('New Brewery', new_brewery_path, class: 'btn') if current_user %>
