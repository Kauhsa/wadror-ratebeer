<p id="notice"><%= notice %></p>

<h1><%= @user.username %></h1>

<p>has given <%= pluralize(@user.ratings.count, "rating") %>, average <%= @user.average_rating %></p>

<ul>
  <% @user.ratings.each do |rating| %>
    <li> 
      <%= rating %> 
      <% if currently_signed_in? @user %>
          <%= link_to 'delete', rating, :method => :delete, :data => { :confirm => 'Are you sure?' } %> 
      <% end %>
    </li>
  <% end %>
</ul>

<% unless @user.beer_clubs.empty? %>
    <p>
        belongs to
        <% @user.beer_clubs.each do |club| %>
            <%= link_to club, beer_club_path(club) %>
        <% end %>
    </p>
<% end %>

<% if @user.favorite_style %>
  <p>favorite style: <%= @user.favorite_style %></p>
<% end %>

<% if @user.favorite_brewery %>
  <p>favorite brewery: <%= link_to @user.favorite_brewery, @user.favorite_brewery %></p>
<% end %>

<% if currently_signed_in? @user %>
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Delete', @user, :method => :delete, :data => { :confirm => 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>