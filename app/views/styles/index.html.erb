<h1>Listing styles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

<% @styles.each do |style| %>
  <tr>
    <td><%= link_to style.name, style %></td>
    <td><%= style.description %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Style', new_style_path, class: 'btn' %>
